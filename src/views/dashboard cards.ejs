    <div class="dashboard-container">
        <h1>Dashboard de Países</h1>
        <% if (paises.length > 0) { %>
            <div class="countries-grid">
                <% paises.forEach(function(pais) { %>
                <div class="country-card">
                    <h2><%= pais.nombre %></h2>
                    <ul>
                        <li><strong>Nombre Oficial:</strong> <%= pais.nombreOficial %></li>
                        <li><strong>Capital:</strong> <%= pais.capital %></li>
                        <!-- Revisa si la población existe antes de mostrarla -->
                        <li><strong>Población:</strong> <%= pais.population ? pais.population.toLocaleString() : 'N/A' %></li>
                        <!-- Revisa si el área existe antes de mostrarla -->
                        <li><strong>Área:</strong> <%= pais.area ? pais.area.toLocaleString() : 'N/A' %> km²</li>
                        <% if (pais.borders && pais.borders.length > 0) { %>
                            <li><strong>Países Fronterizos:</strong> <%= pais.borders.join(', ') %></li>
                        <% } %>
                        <% if (pais.gini) { %>
                            <li><strong>Índice Gini:</strong> <%= Object.values(pais.gini)[0] %> (Año: <%= Object.keys(pais.gini)[0] %>)</li>
                        <% } %>
                        <% if (pais.timezones && pais.timezones.length > 0) { %>
                            <li><strong>Husos Horarios:</strong> <%= pais.timezones.join(', ') %></li>
                        <% } %>
                        <li><strong>Creador:</strong> <%= pais.creador %></li>
                    </ul>
                    <div class="card-actions">
                        <a href="/api/formEditarPais/<%= pais._id %>" class="btn btn-primary">Editar</a>
                        <a href="/api/confirmarEliminar/<%= pais._id %>" class="btn btn-delete">Eliminar</a>
                    </div>
                </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="no-countries">No se encontraron países en la base de datos.</p>
        <% } %>
    </div>