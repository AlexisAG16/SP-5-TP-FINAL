<div class="form-container">
        <form action="/api/ActualizarPais/<%= pais._id %>?_method=PUT" method="POST">
            <h1>Editar País: <%= pais.nombre %></h1>
            <fieldset>
                <legend>Datos del País</legend>
                <div class="form-group">
                    <label for="nombre">Nombre del País:</label>
                    <input type="text" id="nombre" name="nombre" value="<%= pais.nombre %>" required>
                </div>
                <div class="form-group">
                    <label for="nombreOficial">Nombre Oficial:</label>
                    <input type="text" id="nombreOficial" name="nombreOficial" value="<%= pais.nombreOficial %>" required>
                </div>
                <div class="form-group">
                    <label for="capital">Capital:</label>
                    <input type="text" id="capital" name="capital" value="<%= pais.capital %>" required>
                </div>
                <div class="form-group">
                    <label for="population">Población:</label>
                    <input type="number" id="population" name="population" value="<%= pais.population %>" required>
                </div>
                <div class="form-group">
                    <label for="area">Área (km²):</label>
                    <input type="number" id="area" name="area" value="<%= pais.area %>" required>
                </div>
                <div class="form-group">
                    <label for="borders">Países Fronterizos (separados por coma):</label>
                    <input type="text" id="borders" name="borders" value="<%= pais.borders.join(', ') %>">
                </div>
                <!-- Campo para el índice Gini (solo el valor numérico) -->
                <div class="form-group">
                    <label for="giniIndex">Índice Gini:</label>
                    <input type="number" step="0.1" id="giniIndex" name="giniIndex" value="<%= pais.gini ? Object.values(pais.gini)[0] : '' %>">
                </div>
                <!-- Campo oculto para el año Gini -->
                <input type="hidden" id="giniYear" name="giniYear" value="<%= pais.gini ? Object.keys(pais.gini)[0] : new Date().getFullYear() %>">
                <div class="form-group">
                    <label for="timezones">Husos Horarios (separados por coma):</label>
                    <input type="text" id="timezones" name="timezones" value="<%= pais.timezones.join(', ') %>">
                </div>
                <div class="form-group">
                    <label for="creador">Creador:</label>
                    <input type="text" id="creador" name="creador" value="<%= pais.creador %>" required>
                </div>
            </fieldset>
            <div class="form-actions">
                <button type="submit" class="btn btn-update">Actualizar País</button>
                <a href="/api/paises" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
<script>
    // Este script asegura que el campo oculto "giniYear" se actualice con el año actual si no hay datos existentes.
    document.addEventListener('DOMContentLoaded', function() {
        const giniYearInput = document.getElementById('giniYear');
        if (!giniYearInput.value) {
            giniYearInput.value = new Date().getFullYear();
        }
    });
</script>